datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity", "fullTextSearch"]
}

model Statute {
  id        Int      @id @default(autoincrement())
  // 标题
  title     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  clause Clause[]
  @@index([title])
  @@map("statute")
}

model Clause {
  id        Int      @id @default(autoincrement())
  /// 编  第一编 总 则
  part      String
  /// 章  第一章
  chapter   String
  /// 条  第几条
  item      Int
  /// 内容 为了保护民事主体的合法权...
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  statute   Statute @relation(fields: [statuteId], references: [id])
  statuteId Int     @map("statute_id")

  @@index([content])
  @@map("clause")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  password  String
  mobile    String?
  status    Int      @default(1) // delete 0 enable 1 disable 2
  realname  String?
  gender    Int      @default(2) // 0 F 1 M 2 U
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([username, realname])
  @@map("user")
}
